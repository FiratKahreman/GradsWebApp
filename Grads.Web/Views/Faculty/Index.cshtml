@using GradsApp.Core.DTOs
@model List<FacultyWithProgramDTO>
@{
    ViewBag.Title = "Fakülteler";
    int i = 0;
}

<table class="table table-striped table-hover table-light">
    <thead>
        <tr>
            <th>#</th>
            <th>Bölüm</th>
            <th>Fakülte</th>
            <th>Konum</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@item.ProgramName</td>
                    <td>@item.FacultyName</td>
                    <td>@item.Location</td>                 
                    
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Fakülte bulunmamaktadır.</td>
            </tr>
        }

        </tbody>
</table>