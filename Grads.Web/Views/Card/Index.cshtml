@using GradsApp.Core.DTOs
@model CardDTO

@{
    ViewBag.Title = "Mezun Kart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var discounts = Model.UsedDiscountsOnMonth;
    var percent = discounts * 100 / 5;
}

<div class="row column4 graph">
    <div class="col-md-6">
        <div class="dash_blog">
            <div class="dash_blog_inner">
                <div class="dash_head">
                    <h3><span><i class="fa fa-calendar"></i> @DateTime.Now.ToShortDateString()</span></h3>
                </div>
                <div class="list_cont">
                    <p>Üye İş Yerleri</p>
                </div>
                <div class="task_list_main">
                    <ul class="task_list">
                        <li><a href="#">Ortahisar Kırtasiye</a><br></li>
                        <li><a href="#">Naf Naf Giyim</a><br></li>
                        <li><a href="#">Ganita Kitabevi</a><br></li>
                        <li><a href="#">Üniversite Kafe</a><br></li>
                        <li><a href="#">Konaklar Ev Yemekleri</a><br></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="white_shd full">
            <div class="widget_progress_bar">
                <p class="progress_no">@Model.UsedDiscountsOnMonth/5</p>
                <p class="progress_head">Bu ay 5 İndirim Hakkınızdan <strong>@discounts</strong> kullandınız.</p>
                <p class="progress_head">Şu ana kadar toplam <strong>@Model.UsedDiscountsOnAll</strong> indirim kullandınız.</p>
                <div class="progress_bar">

                    <span class="skill" style="width:@percent%;"><span class="info_valume">@percent%</span></span>
                    <div class="progress skill-bar ">
                        <div class="progress-bar progress-bar-animated progress-bar-striped" role="progressbar" aria-valuenow="73" aria-valuemin="0" aria-valuemax="100" style="width: @percent%;"></div>
                    </div>
                </div>
            </div>
            <div class="">
                <div class="full white_shd margin_bottom_30">
                    <div class="info_people">
                        
                        
                        <div class="user_info_cont">
                            <img class="rounded" width="220" height="130" src="~/dosyalar/images/logo/mezunkarttaslak.png" alt="#" />
                            <h4>KTÜ Mezun Kart Kullanıcısı</h4>

                            <p style="color:green">Aktif</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
